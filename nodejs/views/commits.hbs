<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:ital,wght@0,200..800;1,200..800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="style-commits.css">
    <title>Commits</title>
</head>
<body>
    <h1 class="title">Commits</h1>
    <ul>
        {{#each commits}}
        <li>
            <div class="card">
                <h2 class="message">{{this.commit.message}}</h2>
                <p class="author">Author: {{this.commit.author.name}}</p>
                <p class="date">Date: <span class="formatDate">{{this.commit.author.date}}</span></p>
            </div>
        </li>
        {{/each}}
    </ul>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const formattedDate = document.querySelectorAll('.formatDate');

            formattedDate.forEach(dateElement => {
                const originalDate = dateElement.textContent; 
                const formattedDate = new Date(originalDate).toLocaleDateString('pt-BR'); 
                dateElement.textContent = formattedDate; 
            });
        });
    </script>
</body>
</html>